// .devcontainer/devcontainer.json
{
    "name": "Python Web App",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "forwardPorts": [8000],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    },
    "postCreateCommand": "pip install -r requirements.txt"
}